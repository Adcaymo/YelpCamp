<% include ../partials/header %>

<div class="row">
  <div class="col-sm-4">
    <h2><%= user.firstName + " " + user.lastName %></h2>
    <div class="thumbnail">
      <img src="<%= user.avatar %>" alt="user profile image">
      <div class="caption">
        <a href="mailto:<%= user.email %>"><%= user.email %></a>
      </div> <!-- caption -->
    </div> <!-- thumbnail -->
